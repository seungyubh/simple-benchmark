# Use the official R base image
FROM r-base:latest

# Install necessary R packages
RUN R -e "install.packages(c('microbenchmark', 'ggplot2'))"

# Copy your R script to the container
COPY benchmark.R /benchmark.R

# Set the working directory
WORKDIR /

# Run the R script when the container starts
CMD ["Rscript", "benchmark.R"]
